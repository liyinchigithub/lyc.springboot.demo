<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.lyc.springboot.demo.mapper.OrderMapper">
    <!-- 使用了 resultType="Order"，这告诉 MyBatis 结果应该映射到 'Order' 类 -->
    <select id="findOrderById" parameterType="String" resultType="com.example.lyc.springboot.demo.entity.Order">
        SELECT * FROM Orders WHERE id = #{id} FOR UPDATE
    </select>
    <select id="getAllOrders" resultType="com.example.lyc.springboot.demo.entity.Order">
        SELECT * FROM Orders ORDER BY ${sortField} LIMIT #{limit} OFFSET #{offset}
    </select>
    <select id="findAllOrders" resultType="com.example.lyc.springboot.demo.entity.Order">
        SELECT * FROM Orders FOR UPDATE
    </select>
    <insert id="insertOrder" parameterType="com.example.lyc.springboot.demo.entity.Order" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO Orders (name, quantity, status) VALUES (#{name}, #{quantity}, #{status})
    </insert>
    <update id="updateOrder" parameterType="com.example.lyc.springboot.demo.entity.Order">
    UPDATE Orders SET name = #{name}, quantity = #{quantity}, status = #{status} WHERE id = #{id}
    <selectKey resultType="int" order="AFTER" keyProperty="updates">
    SELECT ROW_COUNT()
    </selectKey>
    </update>
    <delete id="deleteOrder" parameterType="String">
    DELETE FROM Orders WHERE id = #{id}
    </delete>

    <!-- 其他SQL语句... -->
</mapper>